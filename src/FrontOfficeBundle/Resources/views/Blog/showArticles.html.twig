{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

        <div class="container">

            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">Immobilier
                            <strong>blog</strong>
                        </h2>
                        <hr>
                    </div>
                    {% for article in showArticles %}
                    <div class="col-lg-12 text-center">
                        <img class="img-responsive img-border img-full" src="img/slide-1.jpg" alt="">
                        <h2>{{ article.title }}
                            <br>
                            <small>{{ article.dateCreated | Date('now') }}</small>
                        </h2>
                        <p>{{ article.content }}</p>
                        <a href="#" class="btn btn-default btn-lg">Lire la suite de l'article</a>
                        <hr>
                    </div>
                    {% endfor %}
                </div>
            </div>

        </div>
        <!-- /.container -->

    {% endblock %}